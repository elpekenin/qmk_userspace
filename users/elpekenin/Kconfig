menuconfig KEYLOG_ENABLE
    bool "keylog"

if KEYLOG_ENABLE
    config KEYLOG_SIZE
        int "maximum length"
        default 70
endif

menuconfig SIPO_PINS_ENABLE
    bool "sipo pins"

if SIPO_PINS_ENABLE
    config N_SIPO_PINS
        int "number of outputs"
endif

config BUILD_INFO
    bool "build info"
    default n

rsource "src/logging/Kconfig"

if QUANTUM_PAINTER_ENABLE
    menu "quantum painter"
       rsource "src/qp/Kconfig"
    endmenu
endif

rsource "src/touch/Kconfig"
