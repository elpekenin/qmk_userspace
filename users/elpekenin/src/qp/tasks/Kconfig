menuconfig QP_TASK_COMPUTER_STATS_ENABLE
    bool "computer stats"

if QP_TASK_COMPUTER_STATS_ENABLE
    config QP_TASK_COMPUTER_STATS_REDRAW_INTERVAL
        int "draw interval (ms)"

    config QP_TASK_COMPUTER_STATS_SIZE
        int "size of array"

    config QP_TASK_COMPUTER_STATS_TIMEOUT
        int "timeout before removing (ms)"
endif # computer stats

