{
    "repo": "https://github.com/qmk/qmk_firmware",
    "branch": "xap",
    "path": "$QMK_HOME",
    "operations": [
        {
            "operation": "cp",
            "src": "keyboards/elpekenin/access",
            "dst": "$QMK_HOME/keyboards/elpekenin/access"
        },
        {
            "operation": "cp",
            "src": "users/elpekenin",
            "dst": "$QMK_HOME/users/elpekenin"
        },
        {
            "": "if submodules are not present, download",
            "operation": "exec",
            "cmd": "ls modules/elpekenin > /dev/null || git submodule update --init --recursive"
        },
        {
            "operation": "cp",
            "src": "modules",
            "dst": "$QMK_HOME/modules"
        },
        {
            "": "3color eink",
            "operation": "pr",
            "id": 20032
        },
        {
            "": "22538-ish",
            "operation": "merge",
            "repo": "https://github.com/elpekenin/qmk_firmware",
            "branch": "feature/rtt"
        },
        {
            "": "24848-ish",
            "operation": "merge",
            "repo": "https://github.com/elpekenin/qmk_firmware",
            "branch": "fix/modules"
        },
        {
            "operation": "checkout",
            "files": ["drivers/painter/il91874"],
            "repo": "https://github.com/elpekenin/qmk_firmware",
            "branch": "il91874"
        },
        {
            "operation": "diff",
            "file": "patches/il91874.diff"
        },
        {
            "operation": "diff",
            "file": "patches/spi_comms.diff"
        },
        {
            "operation": "diff",
            "file": "patches/generic_rotation.diff"
        },
        {
            "operation": "cp",
            "src": "users/elpekenin/ld/elpekenin_rp2040.ld",
            "dst": "$QMK_HOME/platforms/chibios/boards/common/ld/elpekenin.ld"
        },
        {
            "operation": "exec",
            "display": "compile left side",
            "cmd": "qmk compile -kb elpekenin/access -km elpekenin -e TARGET=left -e MAKECMDGOALS=uf2-split-left > left.log 2>&1",
            "at": "$QMK_HOME"
        },
        {
            "operation": "exec",
            "display": "compile right side",
            "cmd": "qmk compile -kb elpekenin/access -km elpekenin -e TARGET=right -e MAKECMDGOALS=uf2-split-right --compiledb > right.log 2>&1",
            "at": "$QMK_HOME"
        },
        {
            "operation": "cp",
            "src": "$QMK_HOME/left.uf2",
            "dst": "/mnt/d"
        },
        {
            "operation": "cp",
            "src": "$QMK_HOME/right.uf2",
            "dst": "/mnt/d"
        }
    ]
}
